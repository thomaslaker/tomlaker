---
pageable: true
per_page: 10
nav_items:
    - Projects
    - Thoughts
    - Photography
    - Contact
---

<div>
    <div class="hero__bg--left"></div>
    <div class="hero__bg--right"></div>
    <div class="container hero">
        <header class="global-header">
            <span class="logo">Tom Laker</span>
            <nav class="global-nav">
                <ul>
                    <li class="global-nav__toggle">
                        <svg viewBox="0 0 30 30">
                             <use xlink:href="images/icon-menu.svg#menu"></use>
                        </svg>
                        Menu
                    </li>
                    <% current_page.data.nav_items.each do |i| %>
                    <li class="global-nav__item"><%= i %></li>
                    <% end %>
                </ul>
            </nav>
        </header>
    </div>
</div>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></h2>
  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
  <%= article.body %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
